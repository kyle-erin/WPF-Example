<Window x:Class="WPF_Example.SaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Example"
        mc:Ignorable="d"
        Title="Save" Height="124" Width="300">
    <Grid>
        <Label x:Name="label" Content="Are you sure you want to save?" HorizontalAlignment="Left" Margin="60,10,0,0" VerticalAlignment="Top" Width="179"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="64,49,0,0" VerticalAlignment="Top" Width="75" Click="btnCancelClick"/>
        <Button x:Name="btnConfirm" Content="Ok" HorizontalAlignment="Left" Margin="164,49,0,0" VerticalAlignment="Top" Width="75" Click="btnConfirmClick"/>

    </Grid>
</Window>
